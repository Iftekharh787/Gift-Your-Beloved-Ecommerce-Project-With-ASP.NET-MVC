@model GiftYourbeloved.Models.Productinfo

@{
    ViewBag.Title = "Details";
}

<h2>Dear Sir! Here Is Your Product</h2>
<div class="largeProductImageDetails">
    <p>
        @{                
            String ImageName = @Model.Name +@Model.ID;    
           <img style="width: 400px; height: 300px; alt="Image"  src="@Url.Content(String.Format("~/Images/Product/{0}.jpg", ImageName))" />
         }
    </p>
    <p>
        <em style="color:red">Product Name:</em>
         @Model.Name
    </p>
    <p>
        <em style="color:red">Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p>
        <em style="color:red">Product Quantity :</em>
         @Model.Quantity
    </p>
    <h4>
        
        @Html.ActionLink("Add to cart", "AddToCart", 
        "ShoppingCart", new { id = Model.ID }, "")
    </h4>
    
</div>


