<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Gifts.COM</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="~/Content/Site.css" rel="stylesheet" />



    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Gifts.Com", "Index", "Productinfo")</p>
                </div>
                <div class="navItems">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Productinfo")</li>
                            <li>@Html.ActionLink("Recommand Product", "Index", "RecommandProductSearch")</li>
                            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>

                             

                         @*   @if (Session["UserName"]!=null){     
                                  <li> @Html.ActionLink("All Product","Index","Productinfo")</li>
                              }*@

                             <li> @Html.ActionLink("All Product","Index","Productinfo")</li>
                            @if (Session["AdminUserName"] != null)
                             {     
                                <li> @Html.ActionLink("Admin", "Index","Admin")</li>
                             }


                           
                            @if (Session["UserName"] == null && Session["AdminUserName"] == null)
                            {     
                                <li> @Html.ActionLink("Login", "loginView","Account")</li>
                            }
                              
                             @if (Session["UserName"] != null || Session["AdminUserName"] !=null)
                             {     
                                  <li> @Html.ActionLink("Log Out","logoutview","Account")</li>
                             }
                         
                            <li>
                              @using (Html.BeginForm("SearchByName", "RecommandProductSearch", FormMethod.Post))
                              {  
                                <input type="text" style="width:auto;" name="SerchProductname" placeholder="Search By Product" required/>
                               <input type="submit" value="Search" />
                              }
                           </li>

                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Gifts.Com</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
